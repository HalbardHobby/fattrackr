<p id="notice"><%= notice %></p>

<h1 class="title">Logs</h1>

<table>
  <thead>
    <tr>
      <th>Calories</th>
      <th>Intake</th>
      <th>Date</th>
      <th>Description</th>
      <th>Protein</th>
      <th>Carb</th>
      <th>Fat</th>
      <th>Alcochol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.calories %></td>
        <td><%= log.intake %></td>
        <td><%= log.date %></td>
        <td><%= log.description %></td>
        <td><%= log.protein %></td>
        <td><%= log.carb %></td>
        <td><%= log.fat %></td>
        <td><%= log.alcochol %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path, class: "button is-text" %>
